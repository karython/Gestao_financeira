# Exemplo de variáveis de ambiente para o projeto Gestão Financeira

# Database
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/your_database

# JWT
SECRET_KEY=uma_chave_secreta_super_secreta
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (JSON array ou CSV) -- ajuste conforme necessidade
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:8000"]

# Email (para envio de relatórios)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@example.com
SMTP_PASSWORD=sua-senha-de-app-ou-token
EMAILS_FROM_EMAIL=noreply@financeiro.com
